<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xmlns:gedmo="http://gediminasm.org/schemas/orm/doctrine-extensions-mapping"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                   https://raw.github.com/doctrine/doctrine2/master/doctrine-mapping.xsd">
    <entity name="App\Core\Entity\File" table="file" repository-class="App\Core\Repository\FileRepository"
    >
        <id name="id" type="string">
            <generator strategy="NONE"/>
        </id>

        <field name="name" />
        <field name="extension" />

        <many-to-many field="graves" target-entity="App\Core\Entity\Grave">
            <join-table name="students_images">
                <join-columns>
                    <join-column name="image_id" referenced-column-name="id" />
                </join-columns>
                <inverse-join-columns>
                    <join-column name="student_id" referenced-column-name="id" />
                </inverse-join-columns>
            </join-table>
        </many-to-many>

        <field name="created" type="datetime_immutable">
            <gedmo:timestampable on="create"/>
        </field>
        <field name="updated" type="datetime">
            <gedmo:timestampable on="update"/>
        </field>
    </entity>
</doctrine-mapping>
