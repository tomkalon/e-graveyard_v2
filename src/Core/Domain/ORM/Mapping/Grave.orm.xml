<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xmlns:gedmo="http://gediminasm.org/schemas/orm/doctrine-extensions-mapping"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                    https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <entity name="App\Core\Domain\Entity\Grave" table="grave" repository-class="App\Core\Infrastructure\Repository\GraveRepository">
        <id name="id" column="id" type="uuid">
            <generator strategy="CUSTOM"/>
            <custom-id-generator class="Ramsey\Uuid\Doctrine\UuidGenerator"/>
        </id>
        <field name="sector" type="integer" />
        <field name="row" type="integer" nullable="true"/>
        <field name="number" type="integer" />
        <field name="positionX" nullable="true"/>
        <field name="positionY" nullable="true"/>

        <many-to-one field="graveyard" target-entity="App\Core\Domain\Entity\Graveyard" inversed-by="graves"/>
        <one-to-many field="people" mapped-by="grave" target-entity="App\Core\Domain\Entity\Person">
            <cascade>
                <cascade-persist/>
                <cascade-remove/>
            </cascade>
        </one-to-many>
        <one-to-many field="images" target-entity="App\Core\Domain\Entity\File" mapped-by="grave">
            <cascade>
                <cascade-persist/>
                <cascade-remove/>
            </cascade>
        </one-to-many>

        <field name="paid" type="datetime" nullable="true" />
        <field name="createdAt" type="datetime_immutable">
            <gedmo:timestampable on="create"/>
        </field>
        <field name="updatedAt" type="datetime">
            <gedmo:timestampable on="update"/>
        </field>

    </entity>
</doctrine-mapping>
