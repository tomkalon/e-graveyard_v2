{% if grave.images|length > 1 %}
    <div class="pt-4 pb-8">
        <h3 class="px-8 py-2 mx-2 md:mx-8 mb-1 display-5 text-xl font-bold text-neutral-50 bg-neutral-400
         dark:text-neutral-300 dark:bg-neutral-600 shadow-[0_4px_9px_-4px_#00000077]">
            {{ 'ui.grave.description.images'|trans }}
        </h3>
        <div class="mx-2 md:mx-8 flex gap-2 ">
            {% for image in grave.images %}
                {% if image.filename != grave.mainImage.filename %}
                    <img src="{{ asset(file_grave.images_thumbnail_directory ~ image.getFilename) }}"
                         data-te-img="{{ asset(file_grave.images_directory ~ image.getFilename) }}"
                         class="rounded shadow-[0_4px_9px_-4px_#00000077]"
                         alt="Grave Image" />
                {% endif %}
            {% endfor %}
        </div>
    </div>
{% endif %}
