{% if grave.positionX != null and grave.positionY != null %}
    <div class="pt-4 pb-8 ">
        <h3 class="px-8 py-2 mx-8 mb-1 display-5 text-xl font-bold text-neutral-50 bg-neutral-400
         dark:text-neutral-300 dark:bg-neutral-600 shadow-[0_4px_9px_-4px_#00000077]">
            {{ 'ui.grave.description.coordinates'|trans }}
        </h3>
        <div class="mx-8 text-center text-neutral-900 dark:text-neutral-50">
            <iframe width="100%" height="600" frameborder="0" scrolling="no" class="rounded shadow-[0_4px_9px_-4px_#00000077]"
                    marginheight="0" marginwidth="0"
                    src="https://maps.google.com/maps?width=100%25&amp;height=600&amp;hl=pl&amp;q={{ grave.positionY }},%20{{ grave.positionX }}&amp;t=k&amp;z=19&amp;ie=UTF8&amp;iwloc=B&amp;output=embed">
            </iframe>
        </div>
    </div>
{% endif %}
