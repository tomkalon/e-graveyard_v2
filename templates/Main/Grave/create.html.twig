{% extends 'Main/Common/Dashboard/layout.html.twig' %}
{% block title %}{{ app_name }} - {{ 'ui.main.grave.title.create'|trans }}{% endblock %}
{% block dashboard_content %}
    <h1 class="text-slate-900 dark:text-slate-100">{{ 'ui.main.grave.title.create'|trans }}</h1>
    <h3 class="text-gray-500 dark:text-gray-300">{{ 'ui.main.grave.position'|trans }}</h3>
    {{ form_start(form) }}
    <div class="grid grid-cols-4 gap-4">
        <div>
            {{ form_row(form.graveyard) }}
        </div>
        <div>
            {{ form_row(form.sector) }}
        </div>
        <div>
            {{ form_row(form.row) }}
        </div>
        <div>
            {{ form_row(form.number) }}
        </div>
    </div>
    <h3 class="text-gray-500 dark:text-gray-300">{{ 'ui.main.grave.coordinates'|trans }}</h3>
    <div class="mt-4 grid grid-cols-4 gap-4">
        <div>
            {{ form_row(form.positionX) }}
        </div>
        <div>
            {{ form_row(form.positionY) }}
        </div>
    </div>
    {{ form_end(form) }}
{% endblock %}
