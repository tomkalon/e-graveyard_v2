<!-- ------------ VERIFY / SET TO UNVERIFIED ------------ -->
{% embed 'core/modal_box/modal_box.html.twig' with {
    name: 'user-modal-permission', title: 'ui.user.change_permission'|trans } %}
    {% block content %}
        <h4 class="p-4 mb-4 rounded">{{ 'ui.user.modal.changing_permission'|trans }}</h4>
        {{ form_start(change_permission_form) }}
        {{ form_row(change_permission_form.roles) }}
