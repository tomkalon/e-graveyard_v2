{% if grave.images|length > 1 %}
    <div {{ stimulus_target('admin--grave--grave-show', 'gallery') }} class="min-h-[185px] relative">
        <div class="mt-6 flex items-center gap-2">
            <h3 class="text-gray-500 dark:text-gray-300">{{ 'ui.grave.description.images'|trans }}</h3>
            <button data-gallery-toggle-action class="btn btn-xs btn-danger">{{ 'ui.buttons.edit'|trans }}</button>
        </div>
        <hr>
        <div data-gallery-loader class="flex w-full h-full justify-center absolute">
            <div class="w-full h-full flex flex-col items-center justify-center">
                <div
                        class="inline-block h-8 w-8 mb-2 animate-spin rounded-full border-4 border-solid border-current border-r-transparent motion-reduce:animate-[spin_1.5s_linear_infinite]"
                        role="status"></div>
                <span>Loading...</span>
            </div>
        </div>
        <div data-te-lightbox-init data-gallery-box class="ml-2 mt-2 flex gap-2 flex-wrap justify-center md:justify-start hidden">
        </div>
    </div>
{% endif %}
