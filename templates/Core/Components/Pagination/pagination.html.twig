{% if pagination.getTotalItemCount %}
    <div class="w-full overflow-hidden shadow-xs">
        <div class="w-full overflow-x-auto">
            <table class="w-full text-gray-900 dark:text-neutral-50">
                <thead>
                <tr class="text-xs font-semibold text-left uppercase border-b border-neutral-500 dark:text-gray-200 dark:bg-neutral-800">
                    {% block head %}
                    {% endblock %}
                </tr>
                </thead>
                <tbody class="divide-gray-700">
                {% for item in pagination %}
                    <tr class="{% if loop.index is odd %}bg-gray-50 dark:bg-neutral-800{% else %}bg-gray-200 dark:bg-neutral-700{% endif %}
                        cursor-pointer hover:bg-gray-300 hover:dark:bg-neutral-900">
                        {% block body %}
                        {% endblock %}
                    </tr>
                {% endfor %}
                </tbody>
            </table>
            {% include 'Core/Components/Pagination/_foot.html.twig' with pagination %}
        </div>
    </div>
{% endif %}

